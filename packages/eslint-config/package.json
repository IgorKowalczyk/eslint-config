{
  "name": "@igorkowalczyk/eslint-config",
  "version": "2.3.0",
  "description": "â˜” My sharable ESLint config",
  "author": "Igor Kowalczyk",
  "license": "MIT",
  "repository": "IgorKowalczyk/shared-configs",
  "funding": "https://github.com/sponsors/igorkowalczyk",
  "bugs": "https://github.com/igorkowalczyk/shared-configs/issues",
  "homepage": "https://github.com/igorkowalczyk/shared-configs/tree/main/packages/eslint-config#readme",
  "type": "module",
  "exports": {
    "./flat": {
      "import": "./dist/esm/flat/index.js",
      "require": "./dist/cjs/flat/index.cjs"
    },
    "./flat/base": {
      "import": "./dist/esm/flat/configs/base.js",
      "require": "./dist/cjs/flat/configs/base.cjs"
    },
    "./flat/next": {
      "import": "./dist/esm/flat/configs/next.js",
      "require": "./dist/cjs/flat/configs/next.cjs"
    },
    "./legacy/node": {
      "import": "./dist/esm/legacy/configs/node.js",
      "require": "./dist/cjs/legacy/configs/node.cjs"
    },
    "./legacy": {
      "import": "./dist/esm/legacy/index.js",
      "require": "./dist/cjs/legacy/index.cjs"
    }
  },
  "scripts": {
    "build": "rollup -c rollup.config.ts --configPlugin @rollup/plugin-typescript",
    "publish-packages": "pnpm publish --access public --no-git-checks --provenance",
    "test:publish-packages": "pnpm publish --access public --no-git-checks --provenance --dry-run",
    "format": "prettier . --write --cache --ignore-unknown",
    "format:check": "prettier . --check --ignore-unknown",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "files": [
    "dist",
    "README.md"
  ],
  "keywords": [
    "eslint",
    "eslint-config",
    "javascript",
    "config",
    "styleguide"
  ],
  "dependencies": {
    "@eslint/js": ">=8.0.0",
    "@next/eslint-plugin-next": "14.1.0",
    "@stylistic/eslint-plugin": "1.6.2",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-next": "^0.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "globals": "^14.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "25.0.7",
    "@rollup/plugin-node-resolve": "15.2.3",
    "@rollup/plugin-typescript": "11.1.6",
    "@types/eslint__js": "8.42.3",
    "@types/node": "20.11.24",
    "@types/rollup-plugin-auto-external": "2.0.5",
    "rollup": "4.12.0",
    "rollup-plugin-auto-external": "2.0.0"
  },
  "peerDependencies": {
    "eslint": ">=8.0.0",
    "prettier": ">=2.0.0"
  },
  "packageManager": "pnpm@8.15.3"
}
