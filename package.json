{
  "name": "@igorkowalczyk/sharable-configs",
  "version": "1.3.0",
  "description": "â˜” My sharable ESlint and Prettier configs",
  "private": true,
  "scripts": {
    "format": "turbo run format --color",
    "format:check": "turbo run format:check --color",
    "publish-packages": "turbo run publish-packages --color",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "int": "prettier --write . --cache --ignore-unknown",
    "int:check": "prettier --check ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/IgorKowalczyk/shared-configs.git"
  },
  "keywords": [
    "eslint",
    "shared-configs",
    "prettier",
    "prettier-config",
    "javascript",
    "config",
    "styleguide"
  ],
  "eslintConfig": {
    "root": false,
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "env": {
      "node": true
    },
    "extends": [
      "./packages/eslint-config/index.js"
    ]
  },
  "author": "Igor Kowalczyk",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/IgorKowalczyk/shared-configs/issues"
  },
  "homepage": "https://github.com/IgorKowalczyk/shared-configs#readme",
  "dependencies": {
    "eslint": "8.40.0",
    "markdown-table": "3.0.3",
    "turbo": "1.9.3"
  },
  "devDependencies": {
    "prettier": "2.8.8"
  },
  "packageManager": "pnpm@8.4.0"
}
